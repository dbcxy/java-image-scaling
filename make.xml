<project name="ImageScaling" default="compile" basedir=".">
	<target name="clean">
		<deltree dir="build" />
	</target>

	<target name="compile" depends="clean">
        <mkdir dir="build/classes"/>
        <mkdir dir="dist"/>
        <javac source="1.5" srcdir="src" destdir="build/classes" debug="true"
               optimize="true" verbose="false">
			<classpath path="libs/Filters.jar"/>
		</javac>
        <jar basedir="build/classes" destfile="dist/imagescaling${version}.jar">
            <fileset dir="src" includes="**/*.properties"/>
			<fileset dir="." includes="license.txt"/>
		</jar>
		<copyfile src="libs/Filters.jar" dest="dist/Filters.jar" />
	</target>

    <target name="source">
        <zip destfile="dist/imagescaling_src_${version}.zip">
            <fileset dir="." includes="make.xml"/>
            <fileset dir="." includes="src/**/*"/>
            <fileset dir="." includes="test/**/*"/>
			<fileset dir="." includes="*.txt"/>
		</zip>
    </target>

	<target name="javadoc" depends="compile">
		<mkdir dir="build/javadoc"/>
		<javadoc destdir="build/javadoc" sourcepath="src" windowtitle="Image Scaling Library ${version}"/>
		<zip destfile="dist/imagescaling_javadoc_${version}.zip">
            <fileset dir="build/javadoc" includes="**/*"/>
		</zip>
	</target>
</project>